    /*
    * Template Name: Sermons Page
    */
-get_header();
.body-bg
    .container
        -
            $i = 1;
            $args = array('post_type'=>'messages','posts_per_page'=> -1, 'order'=>'date' );
            $loop = new WP_Query($args);
        -if( $loop->have_posts() ) : while( $loop->have_posts() ) : $loop->the_post();
        .container-box
            .row(id!="<?php the_title(); ?>")
                .col-xs-12.message-content
                    span.the-date
                        - the_date();
                    h3 
                        - the_title();
                    .full-width
                        - the_content();
        -$i++;
        -endwhile; else:
        |Sorry There May Be A Problem;
        -get_search_form();
        -endif;
        -wp_reset_query(); 
- get_footer();